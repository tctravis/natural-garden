---
import { Image } from '@astrojs/image/components';

const { href = "", title = "", body = "", image = null } = Astro.props;
---

<div class="bg-white rounded-lg shadow">
  <a href={href}>
	{image && <Image class="rounded-t-lg" src={image.src} alt={image.alt} width={image.width} height={image.height} format={image.format} />}
    <div class="p-4 prose">
      {title && <h3 class="text-2xl font-bold text-headers font-headers">{title}</h3>}
      {body && <p>{body}</p>}
    </div>
  </a>
</div>

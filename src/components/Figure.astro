---
import { Image } from "@astrojs/image/components";

const { image } = Astro.props;
---

<figure>
    <Image
        class="w-full rounded"
        src={image.src}
        alt={image.alt}
        width={image.width}
        height={image.height}
        format={image.format}
    />
    {
        image.caption && (
            <figcaption class="w-full pt-1 text-xs text-center">{image.caption}</figcaption>
        )
    }
</figure>

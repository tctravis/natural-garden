---
import Container from "../components/Container.astro";
import MainNav from "../components/MainNav.astro";

const { title } = Astro.props;
---

<header class="Header bg-gradient-to-l from-slate-700 to-slate-950 text-header-text">
    <Container>
        <div class="flex flex-col lg:flex-row items-center py-4">
            <a class="font-headers text-2xl md:text-xl mb-6 lg:mb-0 flex flex-col md:flex-row items-center justify-center" href="/"><span class="uppercase">{title}<span class="hidden md:inline-block px-2">-</span></span><span class="text-xl">Garden Design and Maintenance</span></a>
            <MainNav class="lg:ml-auto" />
        </div>
    </Container>
</header>

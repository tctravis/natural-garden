---
import PageSection from "./PageSection.astro";
import CardGrid from "./CardGrid.astro";
import Card from "./Card.astro";

const { settings, content } = Astro.props;
---

<PageSection>
  <div class="space-y-4 flex flex-col">
    {content.title && <h2 class="mx-auto text-4xl font-headers font-weight-headers">{content.title}</h2>}
    <CardGrid cardsPerRow={settings.cardsPerRow}>
      {
        content.cards.map((card) => (
          <Card
            title={card.title}
            body={card.body}
            href={card.href}
            img={card.img}
          />
        ))
      }
    </CardGrid>
  </div>
</PageSection>

---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Logos from "../components/Logos.astro";
import CardSection from "../components/CardSection.astro";
import Testimonial from "../components/Testimonial.astro";

import { siteTitle, siteStrapline } from "../data/site.json";

const services = {
  sectionTitle: "Services",
  cards: [
    {
      title: "Garden and planting design",
      body: "From refreshing a tired border to re-imagining your entire garden, collaborate with us to realise the full potential of your outdoor space",
      href: "/design",
      img: {
        src: "/images/sedum-geranium.jpg",
        alt: "Deep purple sedum with geranium phaeum leaf",
        width: 800,
        height: 450,
        format: "jpg",
      },
    },
    {
      title: "Small garden maintenance",
      body: "Regular, reliable, light-touch garden maintenance by an RHS-qualified horticulturalist using organic, planet-friendly methods",
      href: "/maintenance",
      img: {
        src: "/images/brunnera-euphorbia-16x9.jpg",
        alt: "Brunnera and Euphorbia",
        width: 800,
        height: 450,
        format: "jpg",
      },
    },
    {
      title: "Wildlife-friendly projects",
      body: "Add features to enhance biodiversity - from small ponds teeming with life to wildflower micro-meadows to attract pollinators",
      href: "/wildlife",
      img: {
        src: "/images/sea-holly-moth-16x9.jpg",
        alt: "Sea holly with moth on it",
        width: 800,
        height: 450,
        format: "jpg",
      },
    },
  ],
};
const testimonials = [
  {
    quote: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras sed aliquam tellus. Aliquam convallis blandit dolor, eu varius magna volutpat a.!",
    source: "Meg, Warton",
  },
  {
    quote: "Vestibulum mattis risus vel facilisis ullamcorper. Aliquam erat volutpat. Nulla facilisi. Duis vestibulum felis et iaculis accumsan.",
    source: "Rebecca, Warton",
  },
];
---

<Layout pageTitle={siteTitle}>
  <Hero pageTitle={siteTitle} pageSubTitle={siteStrapline} />
  <CardSection sectionTitle={services.sectionTitle} cards={services.cards} />
  <Testimonial quote={testimonials[0].quote} source={testimonials[0].source} />
  <!-- <Logos /> -->
  <!-- <Testimonial quote={testimonials[1].quote} source={testimonials[1].source} /> -->
</Layout>

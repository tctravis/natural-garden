---
import { Image } from "@astrojs/image/components";

import Layout from "../layouts/Layout.astro";
import SectionHero from "../components/SectionHero.astro";
import SectionCards from "../components/SectionCards.astro";
import SectionQuote from "../components/SectionQuote.astro";
import SectionTextImage from "../components/SectionTextImage.astro";

import { siteTitle, siteStrapline } from "../data/site.json";
import { sections } from "../data/home.json";
---

<Layout pageTitle={siteTitle}>
  <SectionHero pageTitle={siteTitle} pageSubTitle={siteStrapline} wrapperClasses="bg-[url('/images/fern-corsican-mint.jpg')] bg-cover pt-16">
    <div class="flex flex-wrap gap-4 self-start items-center justify-start">
      <div
        class="w-full min-[420px]:w-auto p-2 bg-[rgba(255,255,255,0.9)] rounded-lg h-12 flex items-center justify-left gap-2"
      >
        <Image
          src="/images/rhs.svg"
          alt="RHS logo"
          width={75}
          height={36}
          format="svg"
        />
        <p class="text-xs">RHS Horticultural Theory and Practice, Level 2</p>
      </div>
      <div
        class="w-full min-[420px]:w-auto p-2 bg-[rgba(255,255,255,0.9)] rounded-lg h-12 flex items-center justify-left gap-2"
      >
        <Image
          src="/images/nocn-qualified.png"
          alt="RHS logo"
          width={36}
          height={36}
          format="png"
        />
        <p class="text-xs">NOCN Garden and Planting Design, Level 3</p>
      </div>
    </div>
  </SectionHero>
  {
    sections.map((section) => (
      section.settings.type === 'text-and-image' && <SectionTextImage settings={section.settings} content={section.content} /> ||
      section.settings.type === 'quote' && <SectionQuote settings={section.settings} content={section.content} /> ||
      section.settings.type === 'cards' && <SectionCards settings={section.settings} content={section.content} />
    ))
  }
  <!-- <SectionTextImage sectionTitle={sections.} /> -->
  <!-- <SectionCards
    sectionTitle={services.sectionTitle}
    cards={services.cards}
    cardsPerRow={services.cardsPerRow}
  /> -->
  <!-- <SectionQuote quote={testimonials[0].quote} source={testimonials[0].source} /> -->
  <!-- <SectionCards
    sectionTitle={ourApproach.sectionTitle}
    cards={ourApproach.cards}
    cardsPerRow={ourApproach.cardsPerRow}
  /> -->
  <!-- <SectionQuote quote={testimonials[1].quote} source={testimonials[1].source} /> -->
</Layout>
